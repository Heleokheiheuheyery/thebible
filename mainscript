<body>
  <div id="letter">üôè</div>

  <script>
    // Load Bible string (simplified version of Genesis 1 for demo)
    const bibleText = `In the beginning God created the heaven and the earth. 
    And the earth was without form, and void; and darkness was upon the face of the deep. 
    And the Spirit of God moved upon the face of the waters.`; // Replace with full Bible if desired

    // Flatten and clean the string
    const bibleLetters = bibleText.replace(/[^a-zA-Z]/g, '').split('');

    // Calculate current letter index based on current month/year
    const startDate = new Date('2024-01-01'); // start date of bible.exe
    const now = new Date();
    const monthsSince = (now.getFullYear() - startDate.getFullYear()) * 12 + (now.getMonth() - startDate.getMonth());

    const index = monthsSince % bibleLetters.length; // wrap around if we loop the whole Bible
    const currentLetter = bibleLetters[index] || '‚úùÔ∏è';

    // Set the letter
    document.getElementById('letter').textContent = currentLetter.toUpperCase();
  </script>
</body>
